<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/side"
    android:fitsSystemWindows="true"
   >
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:id="@+id/toolbar"
    android:background="@drawable/side">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="个人信息"
        android:textSize="@dimen/dp_19"
        android:textColor="@color/colorWhile"/>
</android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:background="@drawable/side">
        <TextView
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhile"/>
        <ImageView
           android:layout_marginRight="@dimen/dp_34"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
            android:background="@mipmap/ic_launcher"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/big_arrow_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/side"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
           android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhile"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astllab"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/c_999"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/big_arrow_right"
            />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
        android:background="@drawable/side"
    android:orientation="horizontal">
    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/colorWhile"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/c_999"
        />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/big_arrow_right"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/side"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人简历"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhile"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salud"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/c_999"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/big_arrow_right"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/side"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/c_141517"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhile"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/big_arrow_right"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/side"/>
    <LinearLayout
        android:background="@drawable/side"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:text="退出登录"
        android:textColor="@color/c_fa6a13"
        android:textSize="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>