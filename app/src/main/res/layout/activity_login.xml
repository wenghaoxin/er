<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_ll"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/dp_73"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="@dimen/dp_201"
            android:layout_height="@dimen/dp_22"
            android:text="你好，为了获取更好的服务"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/c_FA6A13"/>
        <TextView
            android:id="@+id/msg"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="@dimen/dp_198"
            android:layout_height="@dimen/dp_38"
            android:textColor="@color/c_373737"
            android:textSize="@dimen/dp_27"
            android:text="请登录到处旅行"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="@dimen/dp_329"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/phone"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:text="+86"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_c636363"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_5"
                android:src="@mipmap/select"/>
            <EditText
                android:id="@+id/et_phone"
                android:background="@drawable/shape"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_22"
                android:hint="请输入手机号码"
                android:textColor="@color/c_C8C8C8"/>
            <Button
                android:id="@+id/bt_code"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_20"
                android:text="发送验证码"
                android:textColor="@color/c_FEFEFE"
                android:background="@mipmap/button_unavailable"
                />
        </LinearLayout>
        <EditText
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="329dp"
            android:layout_height="1dp"
            android:background="@color/c_FFFA6A13"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_181"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="15dp"
                android:layout_height="1dp"
                />
            <TextView
                android:id="@+id/or"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:text="or"
                android:textColor="@color/c_FFA9A9A9"
                android:textSize="14dp"
                />
            <View
                android:layout_width="15dp"
                android:layout_height="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_wechat"
                android:layout_marginTop="@dimen/sp_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_wechat"
                />
            <ImageView
                android:id="@+id/img_sina"
                android:layout_marginTop="@dimen/sp_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_sina"
                />
            <ImageView
                android:id="@+id/img_qq"
                android:layout_marginTop="@dimen/sp_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_qq"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_gravity="center"
            android:layout_width="51dp"
            android:layout_height="17dp"
            android:text="三方登录"
            android:textColor="@color/c_FF4DAE46"
            android:textSize="12dp"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_83"
            android:layout_width="@dimen/dp_209"
            android:layout_height="@dimen/dp_18"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_156"
                android:layout_height="@dimen/dp_18"
                android:text="登录或注册即同意到处旅行"
                android:textColor="@color/c_FF999999"
                android:textSize="13dp"
                />
            <TextView
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_18"
                android:text="用户协议"
                android:textColor="@color/c_FF000000"
                android:textSize="@dimen/dp_13"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/verify_ll"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_20">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/back_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:gravity="right"
                android:text="重新发送(60s)"
                android:paddingRight="@dimen/dp_15"
                android:layout_gravity="right|center_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_44"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_38"
            android:text="请输入验证码"
            android:layout_marginLeft="@dimen/dp_23"
            android:textColor="#FF373737"
            android:textSize="@dimen/dp_27"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_83"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et1"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:gravity="center"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:inputType="number"
                android:maxLines="1"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et2"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et3"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et4"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>