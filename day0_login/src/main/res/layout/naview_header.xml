<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/compile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/heafer_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_37"
            android:background="@mipmap/icon_me_kaquan_banmi1" />

        <TextView
            android:maxEms="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/header_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_93"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_marginBottom="@dimen/dp_38"
            android:text="林小姐"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_22" />

        <TextView
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/header_signature"
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_95"
            android:layout_marginTop="@dimen/dp_72"
            android:text="四体不勤五谷不分人懒嘴馋花痴健忘"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_239"
            android:layout_marginTop="@dimen/dp_94"
            android:background="@mipmap/icon_me_bianji" />

        <TextView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_259"
            android:layout_marginTop="@dimen/dp_91"
            android:text="编辑"
            android:textColor="@color/c_FA6A13"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_38"
        android:background="@drawable/pin_f9_f6">

        <TextView
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="我的钱包"
            android:textColor="@color/c_FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_101"
            android:layout_marginTop="@dimen/dp_29"
            android:text="99"
            android:textColor="@color/c_FFFFFF"
            android:textSize="55sp" />

        <TextView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_174"
            android:layout_marginTop="@dimen/dp_60"
            android:text="元"
            android:textColor="@color/c_FFFFFF"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/header_tvwin"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_205"
            android:layout_marginTop="@dimen/dp_94"
            android:text="赢取奖金"
            android:textColor="@color/c_FFFFFF"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_267"
            android:layout_marginTop="@dimen/dp_94"
            android:text=">>"
            android:textColor="@color/c_FFFFFF"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/sp_19">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/sp_17"
                    android:background="@mipmap/icon_me_kaquan" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="我的卡券"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@mipmap/right_arrow" />
                <View
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_52"
                    android:background="#F0F0F0"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/icon_me_yigou" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="已购行程"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/right_arrow" />

                <View
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_52"
                    android:background="#F0F0F0"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/icon_me_shoucang" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="我的收藏"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/right_arrow" />

                <View
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_52"
                    android:background="#F0F0F0"></View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/icon_me_guanzhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="我的关注"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@mipmap/icon_me_kefu" />
            <TextView
                android:layout_toRightOf="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="联系客服"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/idea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="@mipmap/icon_me_fankui" />
            <TextView
                android:layout_toRightOf="@+id/img_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="意见反馈"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_updata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="@mipmap/icon_me_banben" />
            <TextView
                android:layout_toRightOf="@+id/img_updata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="版本检测"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12"
               />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>