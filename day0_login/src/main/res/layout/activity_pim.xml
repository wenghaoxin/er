<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.PIMActivity"
    android:orientation="vertical">
   <android.support.v7.widget.Toolbar
       android:layout_marginTop="@dimen/dp_12"
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_gravity="center_horizontal"
           android:id="@+id/tool_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="个人信息"
           android:textColor="@color/c_333333"
           android:textSize="@dimen/sp_16"
           android:layout_marginBottom="@dimen/dp_14"/>
   </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:text="获取途径"
        android:textColor="@color/c_666666"/>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/reimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    />
                <ImageView
                    android:id="@+id/img"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_303"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@mipmap/icon_wan"
                    />
                <View
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_52"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_F0F0F0"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:singleLine="true"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:id="@+id/tv_name"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拌小米"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    />
                <View
                    android:layout_marginTop="@dimen/dp_52"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_F0F0F0"/>
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_marginLeft="@dimen/dp_313"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保密"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            />
        <View
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_F0F0F0"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="个性签名"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:singleLine="true"
            android:maxEms="8"
            android:ellipsize="end"
            android:id="@+id/tv_signature"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四肢不全五体不勤"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            />
    </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/tv_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                />
            <View
                android:layout_marginTop="@dimen/dp_53"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_F0F0F0"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定手机"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:layout_marginBottom="@dimen/dp_22"
                />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/pin_f9_f6"
        android:id="@+id/bt_logout"
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_40"
        android:text="退出登录"
        android:textColor="@color/c_FFFFFF"
        android:textSize="@dimen/sp_14"/>

</LinearLayout>