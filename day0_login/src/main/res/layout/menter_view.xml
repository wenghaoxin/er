<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_3"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
   android:background="@drawable/careview_shape" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/view_img"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_160"
            android:background="@mipmap/zhanweitu_xianlu_jingdian"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_137"
            android:layout_marginTop="@dimen/dp_17"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/c_333333"/>
            <ImageView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:id="@+id/img_follow"
                android:background="@mipmap/follow_unselected"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_137"
            android:layout_marginTop="@dimen/dp_42"
            android:id="@+id/tv_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_999999"/>
        <ImageView
            android:layout_marginLeft="@dimen/dp_139"
            android:layout_marginTop="@dimen/dp_71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_156"
            android:layout_marginTop="@dimen/dp_69"
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_999999"/>
        <ImageView
            android:layout_marginLeft="@dimen/dp_139"
            android:layout_marginTop="@dimen/dp_92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_155"
            android:layout_marginTop="@dimen/dp_90"
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_999999"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>